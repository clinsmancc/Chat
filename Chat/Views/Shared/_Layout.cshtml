<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
</head>
<body>

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="page-header">
					<h1>Lets imagine that chat is embedded somewhere on this page</h1>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				@RenderBody()
			</div>
		</div>
	</div>

	@Styles.Render("~/css/bootstrap.css")
	@Styles.Render("~/css/chat.css")

	@Scripts.Render("~/js/jquery.js")
	@Scripts.Render("~/js/bootstrap.js")
	@Scripts.Render("~/js/knockout.js")
	@Scripts.Render("~/js/signalr.js")
	@Scripts.Render("~/js/chat.js")

	<script src="~/signalr/hubs"></script>

</body>

</html>